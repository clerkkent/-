.list-main
  .row
    padding: 0 0.3rem
    background-color: white
  .row-title
    height: 1rem
    line-height: 1rem
    color: #888
    font-size: 0.36rem
    border-bottom: 1px solid #F6F6F6
  .row-text
    display: inline-block
    font-size: 0.32rem
    line-height: 1
  .list-slider-box
    height: 100%
    width: 100%
  .box-max
    padding-top: 20px 
  .list-box-flex
    -webkit-box-flex: 2
    background: #fff
    padding: 40px 32px
    margin: 0 28px
  .list-box-center
    margin-bottom: 20px
    -webkit-box-flex: 2
    display: -webkit-box
    -webkit-box-align: center
    .comment-content
      font-size: 32px
      color: #222
    .comment-thread
      background: #F6FAFE
      height: 82px
      line-height: 82px
      padding-left: 20px
      color:  #2A2A2A
      font-size: 28px
      span
        color: #2573E5
    .list-box-item
      display: -webkit-box
      -webkit-box-align: top
      .list-item-title
        font-size: 32px
        color: #222
        -webkit-box-flex: 2
        line-height: 32px
        margin-right: 30px
        img
          width: 36px
          height: 28px
          margin-left: 10px
      .views
        font-size: 20px
        width: 88px
        height: 64px
        text-align: center
        line-height: 32px
        border: 1px solid #ECF0F4
        div
          background: #ECF0F4
          color: #768995
        p 
          color: #61727C
    .list-time-box, .list-time-box-thread
      color: #999
      font-size: 20px
      margin-top: 8px
    .list-time-box-thread
      padding: 10px 0 20px
  .del-main
    height: 100px
    display: -webkit-box
    -webkit-box-align: center
    position: fixed
    bottom: 0
    border-top: 1px solid #999
    width: 100%
    z-index: 100
    background: #f5f5f5
    .all-del, .all-count, .all-count-right
      width: 50%
      font-size: 36px
      color: #999
      text-align: center
      height: 100px
      line-height: 100px
    .all-del
      border-right: 1px solid #999
      color: #222
    .all-count-right
      color: #F5422A