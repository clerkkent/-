.menu
  .item
    margin-left: 53px
    height: 120px
    border-bottom: 1PX solid rgba(0,0,0,.1)
    display: flex
    align-items: center
    &:last-child
      border: none
    .menu-name
      flex: 1
      margin-left: 28px
      font-family: PingFangSC-Regular;
      font-size: 28px;
      color: #666666;
      letter-spacing: 0.12px;
    .icon
      width: 56px
      height: 56px
      margin-left: 4px
    .message
      background: url('@/imgs/ic_mine_message@2x.png') center / 56px 56px no-repeat
    .collect
      background: url('@/imgs/ic_mine_collect@2x.png') center / 56px 56px no-repeat
    .topic
      background: url('@/imgs/ic_mine_article@2x.png') center / 56px 56px no-repeat
    .comment
      background: url('@/imgs/ic_mine_collect@2x.png') center / 56px 56px no-repeat
    .task
      background: url('@/imgs/ic_mine_task@2x.png') center / 56px 56px no-repeat
    .mark
      width: 16px;
      height: 16px;
      background: #FF4C2E;
      border-radius: 50%;
      margin-right: 20px
    .arrows
      width: 18px
      height: 24px
      background: url('@/imgs/ic_mine_task_next@2x.png') center / 18px 24px no-repeat
      margin-right: 34px
