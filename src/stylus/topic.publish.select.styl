@keyframes updown
  0%
    opacity: 0
  70%
    transform: translateY(-15px)
  100%
    transform: translateY(0px)
updowFn(x)
  animation: updown 500ms cubic-bezier(.45,.44,.53,1.03) (x*100)ms 1 both
.view
  background: url('@/imgs/bg_sq_publishtc@2x.png') no-repeat
  background-size: 100% 100%
  .content
    width: 580px
    margin: 0 auto
    text-align: center;
    position: absolute;
    bottom: 120px;
    left: 0;
    right: 0;
    .hint
      font-family: PingFangSC-Regular;
      font-size: 28px;
      color: #447BFF;
      text-align: center;
    .types-area
      margin-top: 64px
      display: inline-block
      width: 580px
      margin-bottom: 40px
      for i in 1 2 3 4 5 6 7 8
        .type-item:nth-child({i})
          updowFn: i
      .type-item
        transform: translateY(1000px)
        display: inline-block
        padding-bottom: 40px
        width: 290px
        .icon
          img
            width: 112px
            height: 112px
            border-radius: 50%
        .type-name
          font-weight: normal
          margin-top: 20px
    .close
      background: url('@/imgs/ic_sq_xtc@2x.png') center / 80px 80px no-repeat
      width: 80px
      height: 80px
      margin: 0 auto
